<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    tools:showIn="@layout/round_trip_itinerary_content_layout">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carrier_logo"
            android:layout_width="@dimen/card_icon"
            android:layout_height="@dimen/card_icon"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flight_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            tools:text="13:40 - 17:00" />


        <TextView
            android:id="@+id/flight_route_and_carrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_small"
            tools:text="EDI-LON, British airways" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stops_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            tools:text="@string/direct" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_small"
            tools:text="1h 20m" />

    </LinearLayout>

</LinearLayout>